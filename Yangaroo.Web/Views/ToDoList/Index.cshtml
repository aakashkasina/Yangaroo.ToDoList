@model IEnumerable<Yangaroo.Web.Models.ToDoItem>




<div class="row">
    <div class="col-lg-2">

    </div>
    <div class="col-lg-8 gray-bg">
        <div class="title-head"> <h1>To do:</h1></div>
        <div class="item-list">
            <ul id="todo">
                @foreach (var item in Model)
                {
                    <li>
                        @Html.DisplayFor(modelItem => item.ListItem)

                    </li>

                }
            </ul>

        </div>
        <hr />
        <form class="form-horizontal" id="addEntry">
            <div class="form-group pdl-30">
                <label for="inputEmail3" class="col-sm-2 control-label">Task</label>

                <input type="text" class="form-control required" id="todoitem">

            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Save Item</button>
                </div>
            </div>
        </form>



    </div>

</div>
<div class="col-lg-2">

</div>


